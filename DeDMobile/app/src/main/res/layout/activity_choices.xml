                android:textAlignment="center"
                android:textColor="#000"
                android:layout_marginEnd="45dp"
                android:textSize="20sp"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/text_bonus"
                android:text="@string/attribute_2"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="22sp"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/value_attribute_2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/value_attribute"
                android:text="@string/attribute_2_value"
                android:textAlignment="center"
                android:layout_marginEnd="35dp"
                android:textColor="#000"
                android:textSize="20sp"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/value_mod_2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/value_attribute"
                android:text="@string/mod_2_value"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_marginEnd="45dp"
                android:textSize="20sp"
                tools:ignore="TextSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/text_bonus"
                android:paddingEnd="20dp"
                android:text="@string/attribute_3"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="22sp"
                tools:ignore="RtlSymmetry,TextSizeCheck" />

            <TextView
                android:id="@+id/value_attribute_3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/value_attribute"
                android:text="@string/attribute_3_value"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_marginEnd="35dp"
                android:textSize="20sp"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/value_mod_3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/value_attribute"
                android:text="@string/mod_3_value"
                android:textAlignment="center"
                android:textColor="#000"
                android:layout_marginEnd="45dp"
                android:textSize="20sp"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
