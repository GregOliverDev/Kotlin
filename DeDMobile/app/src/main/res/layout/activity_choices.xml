                android:textColor="#000"
                android:layout_marginEnd="45dp"
                android:textSize="20sp"
                tools:ignore="TextSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:background="@drawable/text_bonus"
                android:paddingEnd="51dp"
                android:text="@string/attribute_5"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="22sp"
                tools:ignore="RtlSymmetry,TextSizeCheck" />

            <TextView
                android:id="@+id/value_attribute_5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/value_attribute"
                android:text="@string/attribute_5_value"
                android:layout_marginEnd="35dp"
