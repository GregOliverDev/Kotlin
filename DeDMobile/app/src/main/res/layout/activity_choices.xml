                android:textSize="20sp"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/value_mod_5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@drawable/value_attribute"
                android:text="@string/mod_5_value"
